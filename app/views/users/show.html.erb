<!--rogin 後表示　Home画面 自分の投稿した本の一覧----------------------------------------------------------------------------->

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>件のerrorが発生しました。</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= render 'books/temp', book: @book, user: @user %>


<!-- 投稿一覧------------------------------------------------------------------>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>title</th>
              <th>opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "profile-img", fallback: "no_image.jpg", size:"60x60" %>
                <p><%= book.user.name %></p>
                </td>
                <td>
                  <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
                </td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>