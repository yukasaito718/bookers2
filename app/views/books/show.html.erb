<!-- 投稿BOOKの詳細とuserの詳細-->
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

<%= render 'books/temp', book: @book, user: @book.user %>
    <!-- 投稿一覧------------------------------------------------------------------>
      <div class="col-xs-9">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
              <tr>
                <td></td>
                <td>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "profile-img", fallback: "no_image.jpg", size:"60x60" %>
                <p><%= link_to @book.user.name, user_path(@book.user) %></p>
                </td>
                <td></td>
                <td>
                  <%= link_to book_path(@book.id) do %>
                    <%= @book.title %>
                </td>
                <td></td>
                <td><%= @book.body %>
                </td>
                <td></td>
                <td></td>

                <% if current_user.id == @book.user_id %><!--　current userとブックのユーザーIDが違うとき表示させない-->
                <td>
                  <%= link_to "Edit", edit_book_path(@book), class: "col-xs-5 btn-sm btn-success" %>
                </td>
                <td></td>
                <td></td>
                <td>
                  <%= link_to "Destroy", book_path(@book), method: :delete, class: "col-xs-5 btn-sm btn-danger" %>
                </td>
                <% end %>
              </tr>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>